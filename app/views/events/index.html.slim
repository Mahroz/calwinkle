  .row
    .col-md-7.order-2.order-lg-1.event-list-block
      h4.events-page-heading
        | MY CURRENT EVENTS
      .event-list
        - @events.each do |event|
          = render partial: 'event_item', locals: { event: event }
    .col-md-5.order-1.order-lg-2.new-event-block
      h4
        | CREATE A NEW EVENT
      br/
      .btn-center
        = link_to  'Create new event', new_event_path, class: 'btn btn-primary'
      hr/

      h4
        | Generate Calendar Widget Code
      br/
      
      .btn-center
        button.btn.btn-primary data-target="#myModal" data-toggle="modal" type="button" 
          | Generate Calendar Widget

    #myModal.modal.fade aria-labelledby="myModalLabel" role="dialog" tabindex="-1" 
      .modal-dialog role="document" 
        .modal-content
          .modal-header
            h4#myModalLabel.modal-title Generate Calendar Widget
          .modal-body
            pre style='max-height: 30em; overflow-y: auto;'
              = render partial: 'generate_user_cal'
          .modal-footer
            button.btn.btn-default data-dismiss="modal" type="button"  Close
  